<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".GamePageActivity">

    <com.jads.geometrydefense.GameBoardCanvas
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/operation_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/record"
            android:visibility="gone">

            <Button
                android:id="@+id/sell_tower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELL"
                android:textSize="10sp" />

            <Button
                android:id="@+id/upgrade_tower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPGRADE"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tower_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/record"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <ImageView
                android:id="@+id/basic_tower"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/tower1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/movement_slow_tower"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/tower2"
                android:visibility="visible" />

        </LinearLayout>


        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/allerta_stencil"
            android:text="start"
            android:textSize="10sp" />

        <Button
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/start"
            android:fontFamily="@font/allerta_stencil"
            android:text="Record"
            android:textSize="10sp" />


    </RelativeLayout>


</LinearLayout>