<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rootRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:orientation="vertical">

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/allerta_stencil"
            android:text="Sign Up"
            android:textColor="#40536A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_btn"
            app:layout_constraintVertical_bias="0.106"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/allerta_stencil"
            android:text="Log in"
            android:textColor="#40536A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_input"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp" />

        <EditText
            android:id="@+id/title_2"
            android:layout_width="223dp"
            android:layout_height="68dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/archivo_black"
            android:inputType="none"
            android:text="DEFENSE"
            android:textAlignment="center"
            android:textColor="#C3D6CFCF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_1" />

        <EditText
            android:id="@+id/title_1"
            android:layout_width="277dp"
            android:layout_height="81dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/archivo_black"
            android:inputType="none"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="GEOMETRY"
            android:textAlignment="center"
            android:textColor="#F3F1F1"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/quit_app"
            style="@android:style/Widget.EditText"
            android:layout_width="55dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:autoLink="none"
            android:background="@null"
            android:ems="14"
            android:focusable="false"
            android:fontFamily="@font/allerta_stencil"
            android:inputType="none"
            android:selectAllOnFocus="false"
            android:text="Quit"
            android:textColor="#E9F8F4F4"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/tower_icon_imageView"
            android:layout_width="34dp"
            android:layout_height="83dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_1"
            app:layout_constraintEnd_toEndOf="@+id/title_1"
            app:layout_constraintHorizontal_bias="0.683"
            app:layout_constraintStart_toStartOf="@+id/title_1"
            app:layout_constraintTop_toTopOf="@+id/title_1"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/tower_icon" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="145dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:background="#D8EAEC"
            android:fontFamily="@font/archivo_black"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingTop="0dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_input" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="145dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:background="#D8EAEC"
            android:editable="true"
            android:fontFamily="@font/archivo_black"
            android:hint="username"
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingTop="0dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_2" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>